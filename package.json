{
  "name": "telegram-azure-gpt-bot",
  "version": "1.0.0",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "prod": "node index.js",
    "docker": "docker build -t telegram-rag-bot . && docker run -p 3000:3000 --env-file .env telegram-rag-bot",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@azure/search-documents": "^12.1.0",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.61.0",
    "p-retry": "^6.0.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "nock": "^13.5.6",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "index.js",
      "indexer.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
